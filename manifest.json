{
  "manifest_version": 2,


  "name": "Test name",
  "description": "TEST",
  "version": "1.0",

  "browser_action": {
    "default_icon": "calhacks.png",
    "default_popup": "popup.html"
  },

  "background": {
    "page": "background.html",
    "persistent": true
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["slider.js", "jquery.js","roundslider.js","popup.js"]
  }],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "notifications",
    "activeTab",
    "tabs",
    "storage"
  ]

}